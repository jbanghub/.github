{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.java/"
      ],
      "matchStrings": [
        "//DEPS (?<depName>\\S+):(\\${\\S+:(?<currentValue>[^ }]+)})(?<suffix>(?::[^ @]+)?(?:@\\w+)?)?",
        "//DEPS (?<depName>\\S+:\\S+):(?<currentValue>[^$:@\\s]+)(?<suffix>(?::[^@\\s]+)?(?:@\\w+)?)?"
      ],
      "datasourceTemplate": "maven",
      "autoReplaceStringTemplate": "{{depName}}:{{newValue}}{{suffix}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.?jbang-catalog.json/"
      ],
      "matchStrings": [
        "\"(?<depName>\\S+):(\\${\\S+:(?<currentValue>[^ }]+)})(?<suffix>(?::[^ @]+)?(?:@\\w+)?)?\"",
        "\"(?<depName>\\S+:\\S+):(?<currentValue>[^$:@\\s]+)(?<suffix>(?::[^@\\s]+)?(?:@\\w+)?)?\""
      ],
      "datasourceTemplate": "maven",
      "autoReplaceStringTemplate": "{{depName}}:{{newValue}}{{suffix}}"
    }
  ]
}