{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.java/"
      ],
      "depNameTemplate": "{{group}}:{{artifact}}{{#if classifier}}:{{classifier}}{{/if}}",
      "matchStrings": [
        "//DEPS (?<group>[^:\\s]+):(?<artifact>[^:\\s]+):(\\${[^:}]+:(?<currentValue>[^ }]+)})(:(?<classifier>[^\\s@]+))?(\\@(?<type>\\w+))?",
        "//DEPS (?<group>[^:\\s]+):(?<artifact>[^:\\s]+):(?<currentValue>[^\\s:@$]+)(:(?<classifier>[^\\s@]+))?(\\@(?<type>\\w+))?"
      ],
      "datasourceTemplate": "maven"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.?jbang-catalog.json/"
      ],
      "depNameTemplate": "{{group}}:{{artifact}}{{#if classifier}}:{{classifier}}{{/if}}",
      "matchStrings": [
        "\"(?<group>[^:\\s\"]+):(?<artifact>[^:\\s\"]+):(\\${[^:}]+:(?<currentValue>[^ }]+)})(:(?<classifier>[^\\s\"@]+))?(\\@(?<type>\\w+))?\"",
        "\"(?<group>[^:\\s\"]+):(?<artifact>[^:\\s\"]+):(?<currentValue>[^\\s\"@$:]+)(:(?<classifier>[^\\s\"@]+))?(\\@(?<type>\\w+))?\""
      ],
      "datasourceTemplate": "maven"
    }
  ]
}