{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": "\\.java",
      "matchStrings": [
        "//DEPS (?<depName>\\S+):(\\${\\S+:(?<currentValue>[^ }]+)})(?<suffix>(?::[^ @]+)?(?:@\\w+)?)?",
        "//DEPS (?<depName>\\S+:\\S+):(?<currentValue>[^$:@\\s]+)(?<suffix>(?::[^@\\s]+)?(?:@\\w+)?)?"
      ],
      "datasourceTemplate": "maven",
      "autoReplaceStringTemplate": "{{depName}}:{{newValue}}{{suffix}}"
    },
    {
      "fileMatch": ".?jbang-catalog.json",
      "matchStrings": [
        "\"(?<depName>\\S+):(\\${\\S+:(?<currentValue>[^ }]+)})(?<suffix>(?::[^ @]+)?(?:@\\w+)?)?\"",
        "\"(?<depName>\\S+:\\S+):(?<currentValue>[^$:@\\s]+)(?<suffix>(?::[^@\\s]+)?(?:@\\w+)?)?\""
      ],
      "datasourceTemplate": "maven",
      "autoReplaceStringTemplate": "{{depName}}:{{newValue}}{{suffix}}"
    }
  ]
}